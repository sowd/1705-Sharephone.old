var bot ;
onload = function(){

	$('[name=call]').change(function() {
		var val = $('[name=call]').val();
		console.log(val); // 出力：ABC
	});

	$('#oncall').click(function(){
		var myname = $('#myname').val() ;
		bot = new Bot(myname,'ドモ子');
		bot.talk().then(utt=>{
			addutt(false,utt) ;
		}) ;
	});
	$('#onsend').click(function(){
		if( bot == undefined ){
			alert('Please call to bot first.') ;
			return ;
		}

	    var sendtxt = $('#sendtext').val() ;
	    addutt(true,sendtxt) ;
		bot.talk(sendtxt).then(utt=>{
			addutt(false,utt) ;
		}) ;
	});

